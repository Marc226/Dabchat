<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/downloadLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.main.ui.DownloadFragment"
    >





    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/MessageMarginStart"
        android:layout_marginTop="@dimen/MessageMarginTop"
        android:layout_marginEnd="@dimen/MessageMarginEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/MessageProgressBarMarginStart"
        android:layout_marginTop="@dimen/MessageProgressBarMarginTop"
        android:layout_marginEnd="@dimen/MessageProgressBarMarginEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
